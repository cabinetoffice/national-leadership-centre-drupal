{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header or pager %}
    <div class="govuk-width-container govuk-width-container--narrow">
      <header>
        {{ header }}
        {{ pager }}
      </header>
    </div>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {% if rows -%}
  <div class="nlc-content-block-wrapper">
    <div class="govuk-width-container">
      {{ rows }}
    </div>
  </div>
  {% elseif empty -%}
    {{ empty }}
  {% endif %}
  {% if pager %}
    <div class="govuk-width-container govuk-width-container--narrow">
      {{ pager }}
    </div>
  {%  endif %}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
