{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header or pager %}
    <div class="govuk-width-container">
      <header>
    {% if header %}
      <div class="nlc-item-count">
        {{ header }}
      </div>
    {% endif %}
        {{ pager }}
      </header>
    </div>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {% if rows -%}
    <div class="govuk-width-container">
      {{ rows }}
    </div>
  {% elseif empty -%}
    <div class="govuk-width-container govuk-width-container--narrow">
      {{ empty }}
    </div>
  {% endif %}
  {% if pager %}
    <div class="govuk-width-container">
      {{ pager }}
    </div>
  {%  endif %}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
