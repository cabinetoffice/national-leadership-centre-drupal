<header class="site-header" role="banner" data-module="header">
    <div class="site-header__first-row">
      <div class="width-container site-header__first-row-inner">
        {{ page.header }}
      </div>
    </div>
    <div class="site-header__second-row width-container">
      {% if phase_banner %}
        {{  phase_banner }}
      {% endif %}
    </div>
</header>

<div class="govuk-width-container">

  <div class="govuk-main-wrapper govuk-main-wrapper--l">

    <div>
      {{ page.pre_content }}
    </div>

    <div class="govuk-grid-row">

      {% set content_class = 'govuk-grid-column-full' %}

      {% if page.sidebar_first or page.sidebar_second %}
        {% set content_class = 'govuk-grid-column-two-thirds' %}
      {% endif %}

      {% if page.sidebar_first and page.sidebar_second %}
        {% set content_class = 'govuk-grid-column-one-third' %}
      {% endif %}

      {% if page.sidebar_first %}
        <div class="govuk-grid-column-one-third">
          <section role="search" id="search-region">
            <h2>Find a senior leader</h2>
            {{ page.sidebar_first }}
          </section>
        </div>
      {% endif %}

      <main class="{{content_class}}" id="main-content"  role="main">
      {{ page.content }}
      </main>

      {% if page.sidebar_second %}
        <div class="govuk-grid-column-one-third">
          <aside role="complementary">
            {{ page.sidebar_second }}
          </aside>
        </div>
      {% endif %}

    </div>

  </div>
</div>

<footer class="site-footer" role="contentinfo">
  <div class="site-footer__inner govuk-width-container">
    {% if page.footer %}{{ page.footer }}{% endif %}
    <div class="site-footer__logo"><a href="/"><img src="{{ base_path ~ directory }}/assets/images/logos/ncl-star.png" alt="Go to the National Leadership Centre Homepage"></a></div>
    <div class="site-footer__copyright"><a class="copyright" target="_blank" href="https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/uk-government-licensing-framework/crown-copyright/">Â© Crown copyright</a></div>
  </div>
</div>
